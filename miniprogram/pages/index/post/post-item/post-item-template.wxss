.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  background-color: #fff;
  border-top: 1px solid #ededed;
  padding-bottom: 5rpx;

}

.post-author-date {
  margin: 10rpx 0 20rpx 10rpx;
}

.post-author {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.post-date {
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5rpx;
  font-size: 26rpx;
}

.post-title {
  font-feature-settings: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10rpx;
}

.post-image {
  width: 100%;
  height: 460rpx;
  margin-bottom: 15rpx;
}

.post-content {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
